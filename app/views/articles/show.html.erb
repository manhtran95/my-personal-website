<div class="app show">
	<div class="row" style="margin-top:2em; margin-bottom:0.5em">
		<% if session[:log_in]==true %>
		<h1 class="col-md-11 title" >
			<strong><%= @article.title %></strong>
		</h1>
		<div class="col-md-1 edit-button">
			<a href= "<%= edit_article_path(@article) %>">
				<img src="images/edit.png" alt="Edit Icon" style="width:30px;height:30px">
			</a>
		</div>
		<% else %>
		<h1 class="col-md-12 title" >
			<strong><%= @article.title %></strong>
		</h1>
		<% end %>
	</div>

	<div class="row">
		<div class="col-md-12 body">	
			<%= @article.text.html_safe %>
		</div>
	</div>

	<div class="row" style="margin-bottom:2em">
		<div class="col-md-3">
			<h3 class="comment-marker">All Comments</h3>
		</div>
		<div class="col-md-3 col-md-offset-6">
			<h3 class="all-notes-link">
				<%= link_to 'back to All Notes', articles_path %>
			</h3>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12">
			<%= render @article.comments %>
		</div>
	</div>

	<div class="row">
		<%= render 'comments/form' %>
	</div>
	
	<div class="row">
		<div class="col-md-3">
			<h3 class="all-notes-link">
				<%= link_to 'back to All Notes', articles_path %>
			</h3>
		</div>
	</div>
</div>