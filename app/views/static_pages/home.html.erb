  <div class="row articles text-center">
    <div class="row" style="margin-top:3em">
      <h1 class="text-center my-articles">
        My favourite articles
      </h1>
    </div>
    <div class="row">
      <% @articles.limit(3).each  do |article| %> 
      <div class="col-md-4 article">
        <div class="row">

          <div class="col-md-12 col-sm-12 col-xs-12 title-container">
            <a href= "<%=article_path(article) %>" class="title">
              <%= article.title %>
            </a>
          </div>

        </div>

        <div class="row">
          <div class="figure-container" >
            <div class="img-responsive fade-in" id="figure" style="width:110px;height:110px; display:none">
              <%= image_tag article.photo.url(:small) %>
            </div>
            
          </div> 
          <div class="text">
            <%= article.description %>
          </div>
        </div>

      </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-md-4 col-md-offset-4 view-more-article text-center">
        <a href= "<%=articles_path %>">
         <button type="button" class="btn btn-default " style="border: solid">VIEW MORE ARTICLES</button>
       </a>
     </div>
   </div>
 </div>

