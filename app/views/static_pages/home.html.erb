
<div class="app home">

  <div class="row container-welcome-message">
    <div class="col-md-12"> 
      <center><h1 class="welcome-message">Warmest welcome to my personal website!</h1></center>
    </div>
  </div>

  <div class="row articles text-center">
  <div class="row">
    <h1 class="text-center my-articles">
      My latest articles
    </h1>
    </div>
    <div class="row">
      <% @articles.limit(3).each  do |article| %> 
      <div class="col-md-4 article">
        <div class="row">

          <div class="col-md-12 col-sm-12 col-xs-12 title-container">
            <a href= "<%=article_path(article) %>" class="title">
              <%= article.title %>
            </a>
          </div>

        </div>

        <div class="row">
          <div class="figure-container" >
            <img src="images/fb.jpg" class="img-responsive figure" id="figure" alt="Test Icon" style="width:110px;height:110px; display:none"></img>
          </div> 
          <div class="text">
            <%= article.description %>
          </div>
        </div>

      </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-md-4 col-md-offset-4 view-more-article text-center">
        <a href= "<%=articles_path %>">
         <button type="button" class="btn btn-default " style="border: solid">VIEW MORE ARTICLES</button>
       </a>
     </div>
   </div>
 </div>
</div>

